
<article class="card {{post_class}}">
    <div class="testimonial-content">
        {{ content }}
    </div>
    <div class="testimonial-wrapper">
        {{#if feature_image}}
            <figure class="testimonial-image round">
                <img
                    srcset="{{img_url feature_image size="xs" format="webp"}} 150w"
                    sizes="48px"
                    src="{{img_url feature_image size="xs"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                >
            </figure>
        {{/if}}
        <div class="testimonial-author">
            <h3 class="h3 testimonial-name">{{title}}</h3>
            {{#if excerpt}}
                <div class="sub-heading testimonial-desc">{{excerpt}}</div>
            {{/if}}
        </div>
    </div>
</article>
